<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/Background_Normal"
    tools:context=".Controller.Main.IndexActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Background_White">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/icon_user"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="@color/Background_Normal"
                android:text="會員資料"
                android:textSize="15dp"
                android:layout_gravity="center" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/RecyclerView_Product"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.98"
            android:weightSum="10"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.86">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/Background_White"
                android:layout_weight="6.98"
                android:orientation="horizontal"
                android:weightSum="10">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="3.6"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/photo"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="6.4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="match_parent"
                    android:weightSum="10"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.15">
                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5.7"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/Member_Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30dp"
                            android:textColor="@color/Background_Normal"
                            android:text="姓名"/>
                        <TextView
                            android:id="@+id/Member_Account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/Public_Text_Color"
                            android:text="帳戶"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.15">
                    </View>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.16">
            </View>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="25dp"
                android:background="@color/Background_White"
                android:layout_weight="5.77"
                android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Background_Normal"
                            android:textSize="15dp"
                            android:text="個人專區"
                            android:layout_margin="13dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Member_Fix_Pas_Lin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="18dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.25">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="right|center"
                                android:src="@drawable/icon_password"
                                android:scaleType="fitCenter"/>

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7.5">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:textSize="15dp"
                                android:layout_marginTop="1.5dp"
                                android:layout_marginLeft="15dp"
                                android:textColor="@color/Public_Text_Color"
                                android:text="修改密碼"/>

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.25">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="left|center"
                                android:src="@drawable/icon_right"
                                android:scaleType="fitCenter"/>

                        </FrameLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Member_Fix_Data_Lin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="18dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.25">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="right|center"
                                android:src="@drawable/icon_edit"
                                android:scaleType="fitCenter"/>

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7.5">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:textSize="15dp"
                                android:layout_marginTop="1.5dp"
                                android:layout_marginLeft="15dp"
                                android:textColor="@color/Public_Text_Color"
                                android:text="修改資料"/>

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.25">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="left|center"
                                android:src="@drawable/icon_right"
                                android:scaleType="fitCenter"/>

                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Background_Normal"
                            android:textSize="15dp"
                            android:text="詳細資訊"
                            android:layout_margin="13dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Member_Explain_Lin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="18dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.25">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="right|center"
                                android:src="@drawable/icon_safe"
                                android:scaleType="fitCenter"/>

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7.5">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:textSize="15dp"
                                android:layout_marginTop="1.5dp"
                                android:layout_marginLeft="15dp"
                                android:textColor="@color/Public_Text_Color"
                                android:text="隱私政策"/>

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.25">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="left|center"
                                android:src="@drawable/icon_right"
                                android:scaleType="fitCenter"/>

                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Member_Version_Lin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="18dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.25">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="right|center"
                                android:src="@drawable/icon_balloon"
                                android:scaleType="fitCenter"/>

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8.75">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:textSize="15dp"
                                android:layout_marginTop="1.5dp"
                                android:layout_marginLeft="15dp"
                                android:textColor="@color/Public_Text_Color"
                                android:text="使用版本"/>

                        </FrameLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Member_Make_Name_Lin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="18dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.25">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="right|center"
                                android:src="@drawable/icon_star"
                                android:scaleType="fitCenter"/>

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8.75">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:textSize="15dp"
                                android:layout_marginTop="1.5dp"
                                android:layout_marginLeft="15dp"
                                android:textColor="@color/Public_Text_Color"
                                android:text="製作作者"/>

                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.25"
            android:weightSum="10"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/Member_Logut_Lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="登出"
                android:textColor="@color/Background_Normal"
                android:textSize="15dp"
                android:background="@color/Background_White">
            </Button>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/Background_White"
        android:layout_weight="1"
        android:weightSum="3">
            <LinearLayout
                android:id="@+id/Main_Product_Index_Lin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/icon_list_gray"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/Icon_Un_Select_Color"
                    android:text="商品列表"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Main_Cart_Index_Lin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/icon_cart_gray"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/Icon_Un_Select_Color"
                    android:text="購物車"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Main_Member_Index_Lin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/icon_user"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/Background_Normal"
                    android:text="會員專區"/>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>